{
  "swagger": "2.0",
  "info": {
    "title": "Movie API",
    "version": "v1",
    "description": "API for managing movies and ratings",
    "contact": {
      "name": "Yuri Danyliak"
    }
  },
  "basePath": "/api",
  "tags": [
    {
      "name": "movies",
      "description": "Endpoints related to movies"
    },
    {
      "name": "ratings",
      "description": "Endpoints related to ratings"
    }
  ],
  "paths": {
    "/movies": {
      "get": {
        "tags": ["movies"],
        "summary": "Get a list of all movies",
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Movie"
              }
            }
          }
        }
      }
    },
    "/ratings": {
      "post": {
        "tags": ["ratings"],
        "summary": "Create a new rating",
        "parameters": [
          {
            "name": "user_id",
            "in": "formData",
            "description": "User ID",
            "required": true,
            "type": "integer"
          },
          {
            "name": "movie_id",
            "in": "formData",
            "description": "Movie ID",
            "required": true,
            "type": "integer"
          },
          {
            "name": "score",
            "in": "formData",
            "description": "Rating score",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "201": {
            "description": "Rating created successfully"
          }
        }
      }
    }
  },
  "definitions": {
    "Movie": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "year": {
          "type": "integer"
        }
      }
    }
  }
}
